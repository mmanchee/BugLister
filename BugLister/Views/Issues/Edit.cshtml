@{
  Layout = "_Layout";
}

@model BugLister.Models.Issue

<h2>Edit</h2>

<h4>Editing: @Html.DisplayFor(model => model.Title)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.IssueId)
    <table class="set-table">
      <tr>
        <td>@Html.LabelFor(model => model.Title)</td>
        <td>@Html.EditorFor(model => model.Title, new { @required = "required"})</td>
      </tr>
      <tr>
        <td>@Html.LabelFor(model => model.Language)</td>
        <td>@Html.DropDownList("LanguageId", null, new { @selected = "1"})</td>
      </tr>
      <tr>
        <td>@Html.LabelFor(model => model.Type)</td>
        <td>@Html.DropDownList("Type")</td>
      </tr>
      <tr>
        <td>@Html.LabelFor(model => model.Description)</td>
        <td>@Html.EditorFor(model => model.Description, new { @class="big-input editor"})</td>
      </tr>
      <tr>
        <td>@Html.LabelFor(model => model.Solution)</td>
        <td>@Html.EditorFor(model => model.Solution, new { @class="big-input editor"})</td>
      </tr>
      <tr>
        <td>@Html.LabelFor(model => model.Link1)</td>
        <td>@Html.EditorFor(model => model.Link1)</td>
      </tr>
      <tr>
        <td>@Html.LabelFor(model => model.Link2)</td>
        <td>@Html.EditorFor(model => model.Link2)</td>
      </tr>
      <tr>
        <td>@Html.LabelFor(model => model.Link3)</td>
        <td>@Html.EditorFor(model => model.Link3)</td>
      </tr>
      <tr>
        <td>@Html.LabelFor(model => model.Project)</td>
        <td>@Html.DropDownList("ProjectId")</td>
      </tr>
    </table>
    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>